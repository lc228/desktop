<?xml version="1.0" encoding="utf-8"?>
<!-- Layout used by SwitchPreference for the switch widget style.  -->
<Switch xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/switchWidget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="16dip"
    android:focusable="false"
    android:clickable="true"
    android:textOn="@string/switch_preference_text_on"
    android:textOff="@string/switch_preference_text_off"
    android:thumb="@drawable/switch_inner_holo_dark"
    android:track="@drawable/switch_track_holo_dark"
    android:switchTextAppearance="@android:style/TextAppearance.Holo.Widget.IconMenu.Item"
    android:minWidth="96dip"
    android:thumbTextPadding="12dip"
    android:switchPadding="16dip"/>
