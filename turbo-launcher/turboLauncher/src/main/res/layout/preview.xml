<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/fl_preview"
        android:layout_width="582px"
        android:layout_height="339px"
        android:layout_x="70px"
        android:layout_y="33px"
        android:visibility="invisible" >

        <com.iLoong.launcher.camera.CameraTextureView
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >
        </com.iLoong.launcher.camera.CameraTextureView>

        <ImageView
            android:id="@+id/iv_switch_button"
            android:layout_width="27.0dip"
            android:layout_height="27.0dip"
            android:layout_gravity="top|right|center"
            android:clickable="true"
            android:src="@drawable/switch_button"
            android:visibility="visible" />
    </FrameLayout>

</AbsoluteLayout>