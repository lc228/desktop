<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BigBackgroundColor"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/about_backll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dstopbackground"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/dsback_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/dsfirst_abouttxt"
            android:textColor="@color/TitleColor"
            android:textSize="20sp" />
    </LinearLayout>
    
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical">
		        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:paddingTop="20dp"
			        android:paddingBottom="5dp">
		         	<ImageView
		         	    android:layout_width="wrap_content"
		            	android:layout_height="wrap_content"
		            	android:layout_gravity="center"
		            	android:background="@drawable/dsaboutlogo"/>
		         	<LinearLayout
		        		android:layout_width="match_parent"
		        		android:layout_height="wrap_content"
		        		android:orientation="vertical"
		        		android:paddingTop="20dp">
		        		<TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center"
				            android:text="@string/dsabout_title"
				            android:textColor="#333333"
				            android:textSize="25sp" />
		 		        <TextView
		 		            android:id="@+id/dsabout_id_launcher_version_cn"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center"
				            android:layout_marginTop="5dp"
				            android:text="@string/dsabout_version"
				            android:textColor="#333333"
				            android:textSize="20sp" />
		        	</LinearLayout> 	
		    	</LinearLayout>
		    </LinearLayout>
		    
		    <ImageView
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="@drawable/dscutoffline" />
			    <LinearLayout
			        android:id="@+id/dsabout_button_check_updates"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:clickable="true"
			        android:orientation="vertical" >
			
			        <RelativeLayout
			            android:layout_width="match_parent"
			            android:layout_height="66dp"
			            android:background="@drawable/dsdesktop_selector" >
			
			            <LinearLayout
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:layout_marginLeft="15dp" >
			
			                <TextView
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="@string/dsabout_check_updates"
			                    android:textColor="@color/dsfont_selector"
			                    android:textSize="18sp" />
			            </LinearLayout>
			
			            <ImageView
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_alignParentRight="true"
			                android:layout_centerVertical="true"
			                android:layout_marginRight="15dp"
			                android:src="@drawable/dsgo_selector" />
			        </RelativeLayout>
			
			        <ImageView
			            android:layout_width="match_parent"
			            android:layout_height="1dp"
			            android:background="@drawable/dscutoffline" />
			    </LinearLayout>
			
			    <LinearLayout
			        android:id="@+id/dsabout_button_social"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:clickable="true"
			        android:orientation="vertical" >
			
			        <RelativeLayout
			            android:layout_width="match_parent"
			            android:layout_height="66dp"
			            android:background="@drawable/dsdesktop_selector" >
			
			            <LinearLayout
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:layout_marginLeft="15dp"
			                android:orientation="vertical" >
			
			                <TextView
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="@string/dsabout_weibo"
			                    android:textColor="@color/dsfont_selector"
			                    android:textSize="18sp" />
			                
			                <TextView
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="@string/dsabout_weibo_site"
			                    android:textColor="@color/dsfont_selector"
			                    android:textSize="14sp" />
			            </LinearLayout>
			
			            <ImageView
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_alignParentRight="true"
			                android:layout_centerVertical="true"
			                android:layout_marginRight="15dp"
			                android:src="@drawable/dsgo_selector" />
			        </RelativeLayout>
			
			        <ImageView
			            android:layout_width="match_parent"
			            android:layout_height="1dp"
			            android:background="@drawable/dscutoffline" />
			    </LinearLayout>
			    
			    <LinearLayout
			        android:id="@+id/dsabout_button_contact"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:clickable="true"
			        android:orientation="vertical" >
			
			        <RelativeLayout
			            android:layout_width="match_parent"
			            android:layout_height="66dp"
			            android:background="@drawable/dsdesktop_selector" >
			
			            <LinearLayout
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:layout_marginLeft="15dp" 
			                android:orientation="vertical">
			
			                <TextView
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="@string/dsabout_qqgroup"
			                    android:textColor="@color/dsfont_selector"
			                    android:textSize="18sp" />
			                
			                <TextView
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="@string/dsabout_qqgroup_address"
			                    android:textColor="@color/dsfont_selector"
			                    android:textSize="14sp" />
			            </LinearLayout>
			
			            <ImageView
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_alignParentRight="true"
			                android:layout_centerVertical="true"
			                android:layout_marginRight="15dp"
			                android:src="@drawable/dsgo_selector" />
			        </RelativeLayout>
			
			        <ImageView
			            android:layout_width="match_parent"
			            android:layout_height="1dp"
			            android:background="@drawable/dscutoffline" />
			    </LinearLayout>
			
			    <LinearLayout
			        android:id="@+id/dsabout_button_feedback"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:clickable="true"
			        android:orientation="vertical" >
			
			        <RelativeLayout
			            android:layout_width="match_parent"
			            android:layout_height="66dp"
			            android:background="@drawable/dsdesktop_selector" >
			
			            <LinearLayout
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:layout_marginLeft="15dp" >
			
			                <TextView
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="@string/dsabout_feedback"
			                    android:textColor="@color/dsfont_selector"
			                    android:textSize="18sp" />
			            </LinearLayout>
			
			            <ImageView
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_alignParentRight="true"
			                android:layout_centerVertical="true"
			                android:layout_marginRight="15dp"
			                android:src="@drawable/dsgo_selector" />
			        </RelativeLayout>
			
			        <ImageView
			            android:layout_width="match_parent"
			            android:layout_height="1dp"
			            android:background="@drawable/dscutoffline" />
			    </LinearLayout>
			    
			    <LinearLayout
			        android:id="@+id/dsabout_button_privacy_notice"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:clickable="true"
			        android:orientation="vertical" >
			
			        <RelativeLayout
			            android:layout_width="match_parent"
			            android:layout_height="66dp"
			            android:background="@drawable/dsdesktop_selector" >
			
			            <LinearLayout
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerVertical="true"
			                android:layout_marginLeft="15dp" >
			
			                <TextView
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="@string/dsabout_privacy_notice"
			                    android:textColor="@color/dsfont_selector"
			                    android:textSize="18sp" />
			            </LinearLayout>
			
			            <ImageView
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_alignParentRight="true"
			                android:layout_centerVertical="true"
			                android:layout_marginRight="15dp"
			                android:src="@drawable/dsgo_selector" />
			        </RelativeLayout>
	
	        <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@drawable/dscutoffline" />
	    	</LinearLayout>
	    </LinearLayout>
    </ScrollView>
</LinearLayout>