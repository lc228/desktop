<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtfeedbackHint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_feedback" />

    <EditText
        android:id="@+id/editfeedbackContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:editable="true"
        android:gravity="left"
        android:maxLength="200"
        android:textSize="20sp" >
    </EditText>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFAFAFA"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnfeedbackok"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/common_commit" >
        </Button>

        <Button
            android:id="@+id/btnfeedbackcancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/circle_cancel_action" >
        </Button>
    </LinearLayout>

</LinearLayout>